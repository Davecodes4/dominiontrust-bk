# Development Environment with PostgreSQL
# Copy this file to .env and update with your values

# Core Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration (PostgreSQL)
# For local development, install PostgreSQL and create a database
DATABASE_URL=postgresql://postgres:password@localhost:5432/dominion_trust_bank

# CORS Settings (for development with frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Twilio Configuration (optional for development)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Media and Static Files
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static
