# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Database (Railway will provide DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000
CORS_ALLOW_ALL_ORIGINS=False

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@dominiontrustcapital.com

# SMS Configuration (TextBelt)
TEXTBELT_API_KEY=your-textbelt-api-key
TEXTBELT_API_URL=https://textbelt.com/text

# Optional: Create superuser on deployment
CREATE_SUPERUSER=True
SUPERUSER_PASSWORD=your-superuser-password 